<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="5dp" android:color="#000000" />
            <gradient android:angle="-90" android:startColor="#7a746b" android:endColor="#66000000"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="5dp" android:color="#ffffff" />
            <solid android:color="#66000000"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="5dp" android:color="#ffffff" />
            <gradient android:angle="-90" android:startColor="#7a746b" android:endColor="#b7393e41" />
        </shape>
    </item>
</selector>